extends layout

block content
  div.container
    div.row
      div.col-md-12
        h1 #{title}
        if message
          .alert.alert-success(role='alert') #{successMessage}
        form(method='POST', action='/contact/send')
        .form-group
          label(for='name') Name
          input#name.form-control(type='text', aria-describedby='nameHelp', placeholder='Enter name', name='name')
        .form-group
          label(for='email') Email
          input#email.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter Email', name='email')
        .form-group
          label(for='message') Message
          textarea#message.form-control(name='message')
        input.btn.btn-primary(type='submit', name='submit', value='Submit')
